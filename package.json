{
  "name": "ncg",
  "version": "1.0.0",
  "description": "NCG - Next Generation Cybersecurity Solutions",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "build:fast": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" SKIP_ENV_VALIDATION=true next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev -p 3000",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev -p 3000",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "npm run test:int && npm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" npx playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
    "test:build-fallback": "node scripts/test-build-time-fallback.mjs",
    "migrate:services": "npx tsx scripts/migrate-services-data.mjs",
    "init:services-section": "npx tsx scripts/init-services-section.mjs",
    "monitor:rds": "node scripts/monitor-rds-health.mjs",
    "start:prod": "bash scripts/start-production.sh",
    "deploy:zero-downtime": "bash scripts/deploy-zero-downtime.sh",
    "monitor:prod": "node scripts/monitor-production.mjs",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ncg-backend",
    "pm2:restart": "pm2 restart ncg-backend",
    "pm2:reload": "pm2 reload ecosystem.config.js --update-env",
    "pm2:logs": "pm2 logs ncg-backend",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "cache:clear": "node -e \"import('./src/lib/cache-manager.mjs').then(m => m.getCacheManager().clear())\"",
    "cache:stats": "node -e \"import('./src/lib/cache-manager.mjs').then(m => m.getCacheManager().getStats().then(console.log))\"",
    "check:connections": "node scripts/check-active-connections.mjs",
    "check:aws": "node scripts/check-aws-config.mjs",
    "test:rds": "node scripts/test-rds-connection.mjs",
    "migrate:rds-to-local": "npx tsx scripts/migrate-rds-to-local.mjs",
    "migrate:data": "npx tsx scripts/migrate-data-simple.mjs",
    "migrate:to-neon": "node scripts/migrate-to-neon.js",
    "check:local-data": "node scripts/check-local-data.js",
    "check:rds-data": "node scripts/check-rds-data.js",
    "migrate:data-only": "node scripts/migrate-data-only.js",
    "migrate:rds-to-neon": "node scripts/migrate-rds-to-neon.js",
    "migrate:rds-to-neon-node": "node scripts/migrate-rds-to-neon-node.js",
    "clear:neon-data": "node scripts/clear-neon-data.js",
    "check:neon-schema": "node scripts/check-neon-schema.js",
    "fix:neon-migration": "node scripts/fix-neon-migration.js",
    "analyze": "ANALYZE=true next build",
    "lighthouse": "lighthouse http://localhost:3000 --view",
    "build:local": "bash scripts/build-local.sh",
    "build:amplify": "bash scripts/build-local.sh",
    "build:test": "npm ci --legacy-peer-deps --prefer-offline --no-audit --no-fund --loglevel=error && NEXT_TELEMETRY_DISABLED=1 npm run build",
    "vercel:logs": "vercel logs",
    "vercel:logs:follow": "vercel logs --follow",
    "vercel:deployments": "vercel ls",
    "vercel:status": "vercel inspect",
    "vercel:open": "vercel open",
    "vercel:env": "vercel env ls"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "3.61.1",
    "@payloadcms/next": "3.61.1",
    "@payloadcms/payload-cloud": "3.61.1",
    "@payloadcms/plugin-cloud-storage": "3.61.1",
    "@payloadcms/richtext-lexical": "3.61.1",
    "@payloadcms/storage-s3": "3.61.1",
    "@payloadcms/ui": "3.61.1",
    "@tailwindcss/postcss": "^4.1.16",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "framer-motion": "^12.23.24",
    "graphql": "^16.8.1",
    "gsap": "^3.13.0",
    "lightningcss": "^1.30.2",
    "lucide-react": "^0.548.0",
    "next": "15.4.8",
    "payload": "3.61.1",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-fast-marquee": "^1.6.5",
    "sharp": "0.34.2",
    "swiper": "^12.0.3",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@aws-amplify/backend": "^1.17.0",
    "@playwright/test": "1.54.1",
    "@testing-library/react": "16.3.0",
    "@types/node": "^22.5.4",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "4.5.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.4.4",
    "jsdom": "26.1.0",
    "playwright": "1.54.1",
    "playwright-core": "1.54.1",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "^4.1.16",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.7.3",
    "vercel": "^49.1.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  }
}
