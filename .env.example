# Database Configuration
DATABASE_URI=postgres://username:password@host:port/database_name
PAYLOAD_SECRET=your-secret-key-here
PG_SSL_CA=
PG_SSL_CA_BASE64=
PG_SSL_CA_BASE64_FILE=path/to/ca-bundle.base64.txt
PG_INSECURE_SSL=true

# For migration (optional)
LOCAL_DATABASE_URI=postgres://postgres:postgres@127.0.0.1:5432/ncg
CLOUD_DATABASE_URI=postgres://username:password@cloud-host:port/database_name

# Next.js Configuration
NEXT_PUBLIC_SERVER_URL=https://your-domain.com
CORS_ORIGINS=

# Vercel Blob Storage (for production media uploads)
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token-here

# AWS S3 Storage (optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-s3-bucket-name
